{
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}/bin/Debug",
            "program": "${workspaceRoot}/bin/Debug/TitanRTS.exe",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Amd",
                    "text": "-gdb-set disassembly-flavor amd",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
    ]
}